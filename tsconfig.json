{
  "include": ["src/", "./webpack.config.ts", "config/"],
  "files": ["global.d.ts"],
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2022", "DOM"],
    "module": "ESNext",
    "rootDir": "./",
    "moduleResolution": "node",
    "typeRoots": ["./node_modules/@types"],
    "sourceMap": true,
    "outDir": "dir",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
